{% extends "pages/default" %}
{% import '_utilities/teaser' as article %}

{% block landing %}
  <section class="container mx-auto mb-6 divide-y divide-slate-300">
    {% set articleQuery = craft.entries.section('article').limit(3) %}
    {% paginate articleQuery as pageInfo, articles %}

    {% for article in articles %}
      {{ article.teaser(article) }}
    {% endfor %}

    {% include '_partials/pagination' with { pageInfo: pageInfo } %}
  </section>
{% endblock %}