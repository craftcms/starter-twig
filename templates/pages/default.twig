{% extends "_layouts/default" %}
{% set heading = entry.pageHeading ?? entry.title %}

{% block content %}
  <header class="container mx-auto">
    <h1 class="font-bold">{{ heading }}</hl>
    {{ entry.pageSubheading|md }}
  </header>
  <section class="page__content">
    {% block landing %}
      {{ entry.pageContent.eagerly().render() }}
    {% endblock %}
  </section>
{% endblock %}
