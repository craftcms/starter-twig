<nav class="pt-6 text-sm" role="navigation" aria-label="Search result pagination">
  {% set prevLinkSummary = "#{pageInfo.currentPage - 1} of #{pageInfo.totalPages}" %}
  {% set nextLinkSummary = "#{pageInfo.currentPage + 1} of #{pageInfo.totalPages}" %}

  {% if pageInfo.getPrevUrl() %}
    <a href="{{ pageInfo.getPrevUrl() }}" class="text-red-500 cursor-pointer font-bold hover:underline focus:underline">Previous Page ({{ prevLinkSummary }})</a>
  {% endif %}
  {% if pageInfo.getNextUrl() %}
    <a href="{{ pageInfo.getNextUrl() }}" class="text-red-500 cursor-pointer font-bold hover:underline focus:underline">Next Page ({{ nextLinkSummary }})</a>
  {% endif %}
</nav>