<form method="post" accept-charset="UTF-8">
  {{ csrfInput() }}
  {{ actionInput('users/login') }}
  {{ redirectInput('/updates') }}
  {{ successMessageInput('Signed in successfully') }}
  {{ failMessageInput('Error signing in') }}

  <div class="mb-6">
    <label for="loginName">Username or email</label>
    {{ input('text', 'loginName', '', {
      id: 'loginName',
      class: 'w-full px-6 py-4'
    }) }}
  </div>
  <div class="mb-6">
    <label for="password">Password</label>
    {{ input('password', 'password', '', {
      id: 'password',
      class: 'w-full px-6 py-4'
    }) }}
  </div>
  <input type="submit" class="rounded bg-red-500 px-6 py-4" value="Sign in" />
</form>